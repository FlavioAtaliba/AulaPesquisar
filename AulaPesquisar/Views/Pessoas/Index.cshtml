@model IEnumerable<AulaPesquisar.Pessoa>

@{
    ViewData["Title"] = "Index";
}
<div class="card">
    <div class="card-header">
     Pequisa Pessoas  
    </div>
    <div class="card-body">
        <form action="/Pessoas/Index" method="get">
            <div class="row">
                <a href="/Pessoas/Create" class="btn btn-dark">
                    Novo
                </a>    
                <select name="itembusca" class="form-control  col-2">
                    <option value="Todos"> Todos </option>
                    <option value="Nome"> Por Nome </option>
                    <option value="Idade"> Por Idade </option>
                    <option value="CPF"> Por CPF  </option>
                    <option value="RG"> Por RG </option>
                </select>

                <label class="col-2">Digite sua busca</label>
                <input type="text" name="query" class="form-control ml-2 mr-2 col-4"/>
                <button type="submit"class="btn btn-success col-2 ml-2">
                    Pesquisar <!--Comentario do HTML--> 
                </button>
            </div>
        </form>


    </div>

</div>


<table class="table">
    <thead>
        <tr>
            
            <th>
               Nome
            </th>
            <th>
               Idade
            </th>
            <th>
               C.P.F.
            </th>
            <th>
               Registr oGeral
            </th>
            <th>
                @Html.DisplayNameFor(model => model.data_nasc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sexo)
            </th>
            
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rg)
            </td>
           
            <td>
               <a href="/Pessoas/Edit/@item.Id" class="btn btn-warning">
                Editar Pessoa
               </a>
               <a href="/Pessoas/Delete/@item.Id" class="btn btn-danger">
                    Deletar Pessoa
               </a>
            
            </td>
        </tr>
}
    </tbody>
</table>
